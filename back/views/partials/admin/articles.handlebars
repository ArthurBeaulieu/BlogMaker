<nav>
  <a href="/admin" class="page-navigation">
    <img src="/img/nav/previous.svg" alt="admin-page">
    <p>{{__ "admin.nav.home"}}</p>
  </a>
  <a href="/admin/article/edit" class="new-article">
    <p>New article</p>
    <img src="/img/action/edit.svg" alt="new-article">
  </a>
</nav>
<main>
  <ul id="articles-list" class="admin-article-list">
    {{#each articles}}
      <li>
        <p>{{this.title}}</p>
        <p>{{this.description}}</p>
        <p>{{this.content}}</p>
        <p>{{this.createdAt}}</p>
        <p>Published <img src="{{#if this.published}}/img/auth/verified.svg{{else}}/img/action/delete.svg{{/if}}" alt="published-status"></p>
        <!--<img src="/img/action/delete.svg" class="delete-article" alt="delete-article">-->
        <a href="/admin/article/edit/{{this.id}}">Edit</a>
      </li>
    {{/each}}
  </ul>
  <p class="pagination">{{page }}/{{pages}}</p>
</main>
